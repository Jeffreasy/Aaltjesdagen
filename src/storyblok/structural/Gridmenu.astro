---
import { storyblokEditable } from '@storyblok/astro'
import StoryblokComponent from '@storyblok/astro/StoryblokComponent.astro'

const { blok } = Astro.props

// DEBUG: Log available Storyblok fields to verify case sensitivity
console.log('üîç Gridmenu - Available fields:', Object.keys(blok))
console.log('üîç Gridmenu - Full blok data:', JSON.stringify(blok, null, 2))

// Storyblok field mapping: title, titlecontent, foto, content, link (lowercase!)
const title = blok.title || ''
const titleContent = blok.titlecontent || ''
const foto = blok.foto
const content = blok.content || ''
const link = blok.link
---

<section
  {...storyblokEditable(blok)}
  class="section-spacing-sm relative overflow-hidden"
>
  <!-- Decorative element -->
  <div class="absolute top-0 right-0 w-96 h-96 bg-primary/5 dark:bg-primary/10 rounded-full blur-3xl"></div>
  
  <div class="container-custom relative z-10">
    {/* Title Section */}
    {title && (
      <h2 class="text-3xl md:text-5xl font-black text-gray-900 dark:text-gray-100 mb-6 tracking-tight leading-tight">
        {title}
      </h2>
    )}
    
    {/* Titlecontent Section */}
    {titleContent && (
      <div class="max-w-4xl mb-12">
        <p class="text-lg md:text-xl text-gray-700 dark:text-gray-300 leading-relaxed font-medium">
          {titleContent}
        </p>
      </div>
    )}
    
    {/* Main Content Grid */}
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 mb-8">
      {/* Foto Card */}
      {foto?.filename && (
        <div class="card-base group flex flex-col">
          <div class="relative h-48 overflow-hidden">
            <img
              src={`${foto.filename}/m/600x400/filters:quality(80)`}
              alt={foto.alt || title || "Gridmenu afbeelding"}
              class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-500"
            />
          </div>
          {content && (
            <div class="p-4">
              <div class="text-gray-600 dark:text-gray-300 leading-relaxed text-sm">
                {content}
              </div>
            </div>
          )}
        </div>
      )}
      
      {/* Content Only Card (if no foto) */}
      {!foto?.filename && content && (
        <div class="card-base group flex flex-col p-6">
          <div class="text-gray-600 dark:text-gray-300 leading-relaxed">
            {content}
          </div>
        </div>
      )}
      
      {/* Nested Components (backward compatibility) */}
      {blok.columns?.map((item: any) => (
        <div class="flex justify-center">
          <StoryblokComponent blok={item} />
        </div>
      ))}
      {blok.items?.map((item: any) => (
        <div class="flex justify-center">
          <StoryblokComponent blok={item} />
        </div>
      ))}
    </div>

    {/* Link Section with modern button */}
    {link?.cached_url && (
      <div class="flex justify-center mt-12">
        <a
          href={`/${link.cached_url}`}
          class="btn-primary"
        >
          Bekijk meer
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
          </svg>
        </a>
      </div>
    )}
  </div>
</section>
