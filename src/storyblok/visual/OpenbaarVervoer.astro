---
import { storyblokEditable, renderRichText } from "@storyblok/astro";

const { blok } = Astro.props;

// Storyblok field mapping: title (text), text (richtext)
const title = blok.title || "";
const tekst = blok.tekst; // Richtext field

// Render richtext content to HTML
const renderedText = tekst ? renderRichText(tekst) : "";
---

<section
  {...storyblokEditable(blok)}
  class="transport-section bg-transparent relative overflow-hidden"
>
  <div class="relative container-custom section-spacing-sm content-layer">
    <!-- Full width layout with gradient card -->
    <div class="max-w-7xl mx-auto">
      <div class="transport-grid">
        <!-- Left: Title area with gradient background -->
        <div class="title-area">
          <div class="gradient-overlay"></div>
          <div class="title-content">
            <div class="transport-icon">ðŸšŒ</div>
            {title && <h2 class="gradient-title">{title}</h2>}
          </div>
        </div>

        <!-- Right: Content area -->
        <div class="content-area">
          {
            renderedText && (
              <div class="prose-transport">
                <Fragment set:html={renderedText} />
              </div>
            )
          }
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .transport-section {
    position: relative;
    /* Background handled by utility class */
  }

  .transport-section::before {
    display: none;
  }

  /* Content layer sits above background */
  .content-layer {
    z-index: 1;
  }

  .transport-grid {
    position: relative;
    display: grid;
    grid-template-columns: 1fr;
    background: color-mix(in srgb, var(--bg-elevated), transparent 10%);
    border-radius: 1.5rem;
    overflow: hidden;
    border: 1px solid var(--border-primary);
    box-shadow: var(--shadow-lg);
    transition: all var(--transition-slow);
  }

  @media (min-width: 768px) {
    .transport-grid {
      grid-template-columns: 2fr 3fr;
      min-height: 28rem;
    }
  }

  .transport-grid:hover {
    box-shadow: var(--shadow-xl);
    border-color: var(--color-secondary);
  }

  /* Title area with gradient background */
  .title-area {
    position: relative;
    background: linear-gradient(
      135deg,
      var(--color-primary) 0%,
      var(--color-secondary) 100%
    );
    padding: 3rem 2rem;
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
  }

  @media (min-width: 768px) {
    .title-area {
      padding: 3rem 2.5rem;
    }
  }

  /* Gradient overlay pattern */
  .gradient-overlay {
    position: absolute;
    inset: 0;
    background-image:
      radial-gradient(
        circle at 20% 50%,
        color-mix(in srgb, var(--text-inverse), transparent 90%) 1px,
        transparent 1px
      ),
      radial-gradient(
        circle at 80% 50%,
        color-mix(in srgb, var(--text-inverse), transparent 90%) 1px,
        transparent 1px
      );
    background-size: 30px 30px;
    opacity: 0.5;
    pointer-events: none;
    z-index: 0;
  }

  .title-content {
    position: relative;
    text-align: center;
  }

  .transport-icon {
    font-size: 4rem;
    margin-bottom: 1.5rem;
    filter: drop-shadow(0 4px 8px color-mix(in srgb, black, transparent 80%));
  }

  @media (min-width: 768px) {
    .transport-icon {
      font-size: 5rem;
    }
  }

  .gradient-title {
    font-size: 2rem;
    font-weight: 900;
    line-height: 1.1;
    color: var(--text-inverse);
    letter-spacing: -0.02em;
    text-shadow: 0 2px 10px color-mix(in srgb, black, transparent 80%);
  }

  @media (min-width: 768px) {
    .gradient-title {
      font-size: 2.75rem;
    }
  }

  /* Content area */
  .content-area {
    position: relative;
    padding: 2.5rem 2rem;
    background: var(--bg-elevated);
    z-index: 1;
  }

  @media (min-width: 768px) {
    .content-area {
      padding: 3rem 3rem;
    }
  }

  /* Custom prose styling */
  .prose-transport :global(p) {
    font-size: 1rem;
    line-height: 1.75;
    color: var(--text-secondary);
    margin-bottom: 1.25rem;
  }

  @media (min-width: 768px) {
    .prose-transport :global(p) {
      font-size: 1.0625rem;
    }
  }

  .prose-transport :global(p:first-of-type) {
    font-size: 1.125rem;
    color: var(--text-primary);
    font-weight: 500;
  }

  .prose-transport :global(strong) {
    font-weight: 700;
    color: var(--color-secondary);
  }

  .prose-transport :global(ul),
  .prose-transport :global(ol) {
    margin: 1.75rem 0;
    padding-left: 1.75rem;
    display: grid;
    gap: 0.875rem;
  }

  .prose-transport :global(li) {
    color: var(--text-secondary);
    position: relative;
    padding-left: 0.5rem;
  }

  .prose-transport :global(ul li)::marker {
    color: var(--color-secondary);
    font-size: 1.25em;
  }

  .prose-transport :global(a) {
    color: var(--color-secondary);
    text-decoration: none;
    font-weight: 600;
    transition: all var(--transition-base);
    border-bottom: 2px solid transparent;
  }

  .prose-transport :global(a:hover) {
    color: var(--color-primary);
    border-bottom-color: var(--color-secondary);
  }

  .prose-transport :global(h1),
  .prose-transport :global(h2),
  .prose-transport :global(h3),
  .prose-transport :global(h4),
  .prose-transport :global(h5),
  .prose-transport :global(h6) {
    color: var(--text-primary);
    font-weight: 700;
    margin-top: 2rem;
    margin-bottom: 1rem;
    line-height: 1.3;
  }

  .prose-transport :global(h3) {
    font-size: 1.25rem;
    color: var(--color-primary);
    display: flex;
    align-items: center;
    gap: 0.75rem;
  }

  @media (min-width: 768px) {
    .prose-transport :global(h3) {
      font-size: 1.5rem;
    }
  }

  .prose-transport :global(h3::before) {
    content: "";
    width: 0.375rem;
    height: 1.5rem;
    background: linear-gradient(
      180deg,
      var(--color-secondary) 0%,
      var(--color-primary) 100%
    );
    border-radius: 0.25rem;
    flex-shrink: 0;
  }
</style>
