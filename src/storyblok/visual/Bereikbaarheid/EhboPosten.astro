---
import { storyblokEditable, renderRichText } from "@storyblok/astro";

const { blok } = Astro.props;

// Storyblok field mapping: title (text), text (richtext)
const title = blok.title || "";
const tekst = blok.tekst; // Richtext field

// Render richtext content to HTML
const renderedText = tekst ? renderRichText(tekst) : "";
---

<section
  {...storyblokEditable(blok)}
  class="ehbo-section bg-transparent relative overflow-hidden"
  style="background: transparent !important;"
>
  <div class="relative container-custom section-spacing-sm content-layer">
    <!-- Compact card with medical theme -->
    <div class="max-w-4xl mx-auto">
      <div class="ehbo-card">
        <!-- Red accent strip (medical theme) -->
        <div class="medical-strip"></div>

        <div class="card-body">
          {
            title && (
              <div class="ehbo-header">
                <div class="medical-badge">
                  <span class="medical-icon">üè•</span>
                  <div class="badge-pulse" />
                </div>
                <h2 class="ehbo-title">{title}</h2>
              </div>
            )
          }

          {
            renderedText && (
              <div class="ehbo-content prose-ehbo">
                <Fragment set:html={renderedText} />
              </div>
            )
          }
        </div>

        <!-- Alert indicator -->
        <div class="alert-indicator">
          <div class="indicator-dot"></div>
          <span class="indicator-text">Belangrijk</span>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .ehbo-section {
    position: relative;
    /* Background handled by utility class */
  }

  /* Background pattern layer */
  .pattern-background {
    z-index: 0;
    pointer-events: none;
  }

  /* Content layer sits above background */
  .content-layer {
    z-index: 1;
  }

  .ehbo-card {
    position: relative;
    background: color-mix(in srgb, var(--bg-elevated), transparent 10%);
    backdrop-filter: blur(12px);
    border-radius: 1.5rem;
    overflow: hidden;
    border: 2px solid var(--border-primary);
    box-shadow:
      var(--shadow-lg),
      0 0 0 1px color-mix(in srgb, var(--color-error), transparent 90%);
    transition: all var(--transition-slow);
  }

  .ehbo-card:hover {
    border-color: var(--color-error);
    box-shadow:
      0 25px 50px -12px color-mix(in srgb, var(--color-error), transparent 75%),
      0 0 0 1px var(--color-error);
    transform: translateY(-2px);
  }

  /* Medical-themed red accent strip */
  .medical-strip {
    height: 0.5rem;
    background: linear-gradient(
      90deg,
      var(--color-error) 0%,
      color-mix(in srgb, var(--color-error), black 10%) 50%,
      var(--color-error) 100%
    );
    position: relative;
  }

  .medical-strip::after {
    content: "";
    position: absolute;
    inset: 0;
    background: repeating-linear-gradient(
      90deg,
      transparent,
      transparent 2rem,
      color-mix(in srgb, var(--text-inverse), transparent 80%) 2rem,
      color-mix(in srgb, var(--text-inverse), transparent 80%) 2.5rem
    );
    z-index: 0;
  }

  .card-body {
    padding: 3rem 2rem;
  }

  @media (min-width: 768px) {
    .card-body {
      padding: 4rem 3.5rem;
    }
  }

  /* Header with medical badge */
  .ehbo-header {
    display: flex;
    align-items: center;
    gap: 1.5rem;
    margin-bottom: 2.5rem;
  }

  @media (max-width: 767px) {
    .ehbo-header {
      flex-direction: column;
      text-align: center;
    }
  }

  .medical-badge {
    position: relative;
    flex-shrink: 0;
    width: 5rem;
    height: 5rem;
    background: linear-gradient(
      135deg,
      var(--color-error) 0%,
      color-mix(in srgb, var(--color-error), black 10%) 100%
    );
    border-radius: 1.25rem;
    display: flex;
    align-items: center;
    justify-content: center;
    box-shadow:
      0 10px 20px -5px color-mix(in srgb, var(--color-error), transparent 60%),
      0 0 0 4px color-mix(in srgb, var(--color-error), transparent 90%);
    animation: pulse-badge 3s ease-in-out infinite;
  }

  @keyframes pulse-badge {
    0%,
    100% {
      box-shadow:
        0 10px 20px -5px color-mix(in srgb, var(--color-error), transparent 60%),
        0 0 0 4px color-mix(in srgb, var(--color-error), transparent 90%);
    }
    50% {
      box-shadow:
        0 10px 20px -5px color-mix(in srgb, var(--color-error), transparent 40%),
        0 0 0 6px color-mix(in srgb, var(--color-error), transparent 85%);
    }
  }

  .medical-icon {
    font-size: 2.5rem;
    filter: drop-shadow(0 2px 4px var(--shadow-sm));
  }

  .ehbo-title {
    font-size: 2rem;
    font-weight: 800;
    line-height: 1.2;
    color: var(--text-primary);
    letter-spacing: -0.01em;
    flex: 1;
  }

  @media (min-width: 768px) {
    .ehbo-title {
      font-size: 2.5rem;
    }
  }

  /* Alert indicator */
  .alert-indicator {
    position: absolute;
    top: 2rem;
    right: 2rem;
    display: flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.5rem 1rem;
    background: color-mix(in srgb, var(--color-error), transparent 90%);
    border: 1px solid color-mix(in srgb, var(--color-error), transparent 70%);
    border-radius: 2rem;
    backdrop-filter: blur(8px);
    z-index: 2;
  }

  @media (max-width: 767px) {
    .alert-indicator {
      top: 1rem;
      right: 1rem;
    }
    .indicator-text {
      display: none;
    }
  }

  .indicator-dot {
    width: 0.5rem;
    height: 0.5rem;
    background: var(--color-error);
    border-radius: 50%;
    animation: pulse-dot 2s ease-in-out infinite;
  }

  @keyframes pulse-dot {
    0%,
    100% {
      opacity: 1;
      transform: scale(1);
    }
    50% {
      opacity: 0.5;
      transform: scale(1.2);
    }
  }

  .indicator-text {
    font-size: 0.875rem;
    font-weight: 600;
    color: var(--color-error);
  }

  /* Content */
  .ehbo-content {
    position: relative;
  }

  /* Custom prose styling */
  .prose-ehbo :global(p) {
    font-size: 1rem;
    line-height: 1.8;
    color: var(--text-secondary);
    margin-bottom: 1.25rem;
  }

  @media (min-width: 768px) {
    .prose-ehbo :global(p) {
      font-size: 1.0625rem;
    }
  }

  .prose-ehbo :global(strong) {
    font-weight: 700;
    color: var(--color-error);
  }

  .prose-ehbo :global(ul),
  .prose-ehbo :global(ol) {
    margin: 2rem 0;
    padding-left: 1.75rem;
    display: grid;
    gap: 1rem;
  }

  .prose-ehbo :global(li) {
    color: var(--text-secondary);
    position: relative;
    padding-left: 1rem;
    padding-top: 0.25rem;
    padding-bottom: 0.25rem;
    border-left: 3px solid
      color-mix(in srgb, var(--color-error), transparent 80%);
  }

  .prose-ehbo :global(ul li)::marker {
    color: var(--color-error);
    font-size: 1.25em;
  }

  .prose-ehbo :global(a) {
    color: var(--color-error);
    text-decoration: none;
    font-weight: 600;
    transition: all var(--transition-base);
    border-bottom: 2px solid transparent;
  }

  .prose-ehbo :global(a:hover) {
    color: var(--color-error);
    border-bottom-color: var(--color-error);
    opacity: 0.8;
  }

  .prose-ehbo :global(h1),
  .prose-ehbo :global(h2),
  .prose-ehbo :global(h3),
  .prose-ehbo :global(h4),
  .prose-ehbo :global(h5),
  .prose-ehbo :global(h6) {
    color: var(--text-primary);
    font-weight: 700;
    margin-top: 2rem;
    margin-bottom: 1rem;
    line-height: 1.3;
  }

  .prose-ehbo :global(h3) {
    font-size: 1.25rem;
    color: var(--color-error);
    display: flex;
    align-items: center;
    gap: 0.75rem;
  }

  @media (min-width: 768px) {
    .prose-ehbo :global(h3) {
      font-size: 1.5rem;
    }
  }

  .prose-ehbo :global(h3::before) {
    content: "‚úö";
    display: inline-flex;
    align-items: center;
    justify-content: center;
    width: 1.75rem;
    height: 1.75rem;
    background: color-mix(in srgb, var(--color-error), transparent 90%);
    border: 2px solid var(--color-error);
    border-radius: 0.375rem;
    font-size: 1rem;
    flex-shrink: 0;
    position: relative;
    z-index: 1;
  }
</style>
