---
// PHASE 2 MIGRATION: Refactored to use base components
// - IconBadge.astro replaces .city-icon styling (~10 lines removed)
// - DecorativeUnderline.astro replaces .title-decoration (~15 lines removed)
// - ContentCard.astro wraps container (~20 lines removed)
// - Kept component-specific: split layout grid, .title-column gradient, sticky positioning
import { storyblokEditable } from "@storyblok/astro";
import { renderText } from "@aaltjesdagen/ui/utils";
import type { BereikbaarheidProps, InEnRondomDeBinnenstadBlok } from "./types";
import ContentCard from "../../../components/bereikbaarheid/ContentCard.astro";
import IconBadge from "../../../components/bereikbaarheid/IconBadge.astro";
import DecorativeUnderline from "../../../components/bereikbaarheid/DecorativeUnderline.astro";

interface Props extends BereikbaarheidProps<InEnRondomDeBinnenstadBlok> {}

const { blok } = Astro.props;

// Storyblok field mapping: title (text), text (richtext)
const title = blok.title || "";
const tekst = blok.tekst; // Richtext field

// Render richtext content to HTML
const renderedText = renderText(tekst);
---

<section
  {...storyblokEditable(blok)}
  class="city-section !bg-transparent relative overflow-hidden"
>
  <div class="section-container content-layer">
    <!-- Wide asymmetric layout -->
    <div class="max-w-6xl mx-auto">
      <ContentCard
        variant="default"
        padding="sm"
        maxWidth="full"
        hoverEffect={true}
      >
        <div class="city-container">
          <!-- Title column with colored background -->
          <div class="title-column">
            <div class="title-sticky">
              <IconBadge
                icon="ðŸ›ï¸"
                variant="primary"
                size="lg"
                animation="none"
              />
              {title && <h2 class="city-title">{title}</h2>}
              <DecorativeUnderline
                variant="gradient"
                width="sm"
                height="medium"
              />
            </div>
          </div>

          <!-- Content column -->
          <div class="content-column">
            {
              renderedText && (
                <div class="prose-base prose-primary">
                  <Fragment set:html={renderedText} />
                </div>
              )
            }
          </div>
        </div>
      </ContentCard>
    </div>
  </div>
</section>

<style>
  .city-section {
    position: relative;
    /* Background handled by utility class */
  }

  .city-section::before {
    display: none;
  }

  /* Gradient overlay layer - sits at base layer */
  .gradient-overlay {
    z-index: var(--z-base);
    pointer-events: none;
  }

  /* Content layer - sits above background */
  .content-layer {
    z-index: var(--z-content);
  }

  /* Component-specific: Split layout grid */
  .city-container {
    position: relative;
    display: grid;
    grid-template-columns: 1fr;
    gap: 2rem;
    overflow: hidden;
  }

  @media (min-width: 1024px) {
    .city-container {
      grid-template-columns: 1fr 2fr;
      gap: 0;
    }
  }

  /* Title column with background - component-specific */
  .title-column {
    background: linear-gradient(
      135deg,
      color-mix(in srgb, var(--color-primary), transparent 95%) 0%,
      color-mix(in srgb, var(--color-accent), transparent 95%) 100%
    );
    padding: 3rem 2rem;
    position: relative;
  }

  @media (min-width: 768px) {
    .title-column {
      padding: 3rem 2.5rem;
    }
  }

  @media (min-width: 1024px) {
    .title-column {
      border-right: 3px solid var(--color-primary);
    }
  }

  /* Decorative gradient line sits at base layer */
  .title-column::before {
    content: "";
    position: absolute;
    top: 0;
    right: 0;
    bottom: 0;
    width: 1px;
    background: linear-gradient(
      180deg,
      transparent 0%,
      var(--color-primary) 50%,
      transparent 100%
    );
    opacity: 0.3;
    z-index: var(--z-base);
  }

  /* Component-specific: Sticky positioning */
  .title-sticky {
    position: relative;
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  @media (min-width: 1024px) {
    .title-sticky {
      position: sticky;
      top: 2rem;
    }
  }

  .city-title {
    font-size: 2rem;
    font-weight: 900;
    line-height: 1.1;
    color: var(--text-primary);
    letter-spacing: -0.02em;
  }

  @media (min-width: 768px) {
    .city-title {
      font-size: 2.5rem;
    }
  }

  /* Content column */
  .content-column {
    padding: 3rem 2rem;
  }

  @media (min-width: 768px) {
    .content-column {
      padding: 3rem 3rem;
    }
  }
</style>
