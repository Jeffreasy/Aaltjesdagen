---
// PHASE 2 MIGRATION: Refactored to use base components
// - IconBadge.astro replaces .transport-icon styling (~10 lines removed)
// - ContentCard.astro wraps transport-grid (~30 lines removed)
// - Kept component-specific: gradient title area, split layout, .gradient-overlay pattern
import { storyblokEditable } from "@storyblok/astro";
import { renderText } from "@aaltjesdagen/ui/utils";
import type { BereikbaarheidProps, OpenbaarVervoerBlok } from "./types";
import ContentCard from "../../../components/bereikbaarheid/ContentCard.astro";
import IconBadge from "../../../components/bereikbaarheid/IconBadge.astro";

interface Props extends BereikbaarheidProps<OpenbaarVervoerBlok> {}

const { blok } = Astro.props;

// Storyblok field mapping: title (text), text (richtext)
const title = blok.title || "";
const tekst = blok.tekst; // Richtext field

// Render richtext content to HTML
const renderedText = renderText(tekst);
---

<section
  {...storyblokEditable(blok)}
  class="transport-section bg-transparent relative overflow-hidden"
>
  <div class="section-container content-layer">
    <!-- Full width layout with gradient card -->
    <div class="max-w-7xl mx-auto">
      <ContentCard
        variant="default"
        padding="sm"
        maxWidth="full"
        hoverEffect={true}
      >
        <div class="transport-grid">
          <!-- Left: Title area with gradient background -->
          <div class="title-area">
            <div class="gradient-overlay"></div>
            <div class="title-content">
              <IconBadge
                icon="ðŸšŒ"
                variant="secondary"
                size="lg"
                animation="none"
                class="transport-icon-badge"
              />
              {title && <h2 class="gradient-title">{title}</h2>}
            </div>
          </div>

          <!-- Right: Content area -->
          <div class="content-area">
            {
              renderedText && (
                <div class="prose-base prose-secondary">
                  <Fragment set:html={renderedText} />
                </div>
              )
            }
          </div>
        </div>
      </ContentCard>
    </div>
  </div>
</section>

<style>
  .transport-section {
    position: relative;
    /* Background handled by utility class */
  }

  .transport-section::before {
    display: none;
  }

  /* Content layer - sits above background */
  .content-layer {
    z-index: var(--z-content);
  }

  /* Component-specific: Split layout grid */
  .transport-grid {
    position: relative;
    display: grid;
    grid-template-columns: 1fr;
    overflow: hidden;
  }

  @media (min-width: 768px) {
    .transport-grid {
      grid-template-columns: 2fr 3fr;
      min-height: 28rem;
    }
  }

  /* Title area with gradient background - component-specific */
  .title-area {
    position: relative;
    background: linear-gradient(
      135deg,
      var(--color-primary) 0%,
      var(--color-secondary) 100%
    );
    padding: 3rem 2rem;
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
  }

  @media (min-width: 768px) {
    .title-area {
      padding: 3rem 2.5rem;
    }
  }

  /* Gradient overlay pattern - sits at base layer - component-specific */
  .gradient-overlay {
    position: absolute;
    inset: 0;
    background-image:
      radial-gradient(
        circle at 20% 50%,
        color-mix(in srgb, var(--text-inverse), transparent 90%) 1px,
        transparent 1px
      ),
      radial-gradient(
        circle at 80% 50%,
        color-mix(in srgb, var(--text-inverse), transparent 90%) 1px,
        transparent 1px
      );
    background-size: 30px 30px;
    opacity: 0.5;
    pointer-events: none;
    z-index: var(--z-base);
  }

  .title-content {
    position: relative;
    text-align: center;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 1.5rem;
  }

  .transport-icon-badge {
    filter: drop-shadow(0 4px 8px color-mix(in srgb, black, transparent 80%));
  }

  .gradient-title {
    font-size: 2rem;
    font-weight: 900;
    line-height: 1.1;
    color: var(--text-inverse);
    letter-spacing: -0.02em;
    text-shadow: 0 2px 10px color-mix(in srgb, black, transparent 80%);
  }

  @media (min-width: 768px) {
    .gradient-title {
      font-size: 2.75rem;
    }
  }

  /* Content area - sits at content layer */
  .content-area {
    position: relative;
    padding: 2.5rem 2rem;
    background: var(--bg-elevated);
    z-index: var(--z-content);
  }

  @media (min-width: 768px) {
    .content-area {
      padding: 3rem 3rem;
    }
  }
</style>
