---
// MIGRATION NOTE: In Storyblok CMS, rename field "text" â†’ "tekst" for this component
// This standardizes with other Bereikbaarheid components (Priority 1.2)

// PHASE 2 MIGRATION: Refactored to use base components
// - ContentCard.astro replaces .hero-card styling (~50 lines removed)
// - Kept component-specific: .accent-bar, .hero-decoration
import { storyblokEditable } from "@storyblok/astro";
import type { BereikbaarheidProps, BereikbaarHeroBlok } from "./types";
import ContentCard from "../../../components/bereikbaarheid/ContentCard.astro";

interface Props extends BereikbaarheidProps<BereikbaarHeroBlok> {}

const { blok } = Astro.props;

// Storyblok field mapping: title (text), tekst (textarea), foto (multi-assets)
const title = blok.title || "";
const text = blok.tekst || ""; // tekst field (plain textarea, not richtext)
---

<section
  {...storyblokEditable(blok)}
  class="hero-section relative overflow-hidden !bg-transparent"
>
  <div class="section-container content-layer">
    <div class="max-w-5xl mx-auto">
      <ContentCard variant="glass" padding="lg" maxWidth="full">
        <div class="accent-bar"></div>
        {title && <h1 class="hero-title">{title}</h1>}
        {text && <p class="hero-text">{text}</p>}
        <div class="hero-decoration"></div>
      </ContentCard>
    </div>
  </div>
</section>

<style>
  .hero-section {
    position: relative;
    min-height: 50vh;
    display: flex;
    align-items: center;
  }

  /* Background pattern layer - sits at base layer */
  .pattern-background {
    z-index: var(--z-base);
    pointer-events: none;
  }

  /* Gradient overlay layer - sits at base layer */
  .gradient-overlay {
    z-index: var(--z-base);
    pointer-events: none;
  }

  /* Content layer - sits above backgrounds */
  .content-layer {
    z-index: var(--z-content);
  }

  /* Accent bar at the top - component-specific decoration */
  .accent-bar {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 6px;
    background: linear-gradient(
      90deg,
      var(--color-primary) 0%,
      var(--color-accent) 50%,
      var(--color-secondary) 100%
    );
  }

  /* Hero title styling */
  .hero-title {
    font-size: 2.5rem;
    font-weight: 900;
    line-height: 1.1;
    letter-spacing: -0.02em;
    color: var(--text-primary);
    margin-bottom: 1.5rem;
  }

  @media (min-width: 768px) {
    .hero-title {
      font-size: 3.75rem;
    }
  }

  @media (min-width: 1024px) {
    .hero-title {
      font-size: 4.5rem;
    }
  }

  /* Hero text styling */
  .hero-text {
    font-size: 1.125rem;
    line-height: 1.75;
    color: var(--text-secondary);
    max-width: 48rem;
  }

  @media (min-width: 768px) {
    .hero-text {
      font-size: 1.25rem;
      line-height: 1.8;
    }
  }

  /* Decorative element - bottom right corner accent - component-specific */
  .hero-decoration {
    position: absolute;
    bottom: -2rem;
    right: -2rem;
    width: 12rem;
    height: 12rem;
    background: radial-gradient(
      circle at center,
      var(--color-accent),
      transparent 70%
    );
    opacity: 0.08;
    pointer-events: none;
    border-radius: 50%;
    z-index: var(--z-base);
  }

  @media (min-width: 768px) {
    .hero-decoration {
      width: 16rem;
      height: 16rem;
    }
  }
</style>
