---
import { storyblokEditable, renderRichText } from "@storyblok/astro";

const { blok } = Astro.props;

// Storyblok field mapping: title (text), text (richtext)
const title = blok.title || "";
const tekst = blok.tekst; // Richtext field

// Render richtext content to HTML
const renderedText = tekst ? renderRichText(tekst) : "";
---

<section
  {...storyblokEditable(blok)}
  class="content-section !bg-transparent relative"
>
  <div class="relative container-custom section-spacing-sm content-layer">
    <!-- Wide layout with side accent -->
    <div class="max-w-6xl mx-auto">
      <div class="content-wrapper">
        <!-- Accent sidebar -->
        <div class="accent-sidebar"></div>

        <!-- Main content -->
        <div class="content-main">
          {
            title && (
              <div class="title-group">
                <div class="title-icon">ðŸš²</div>
                <h2 class="section-title">{title}</h2>
              </div>
            )
          }

          {
            renderedText && (
              <div class="prose-custom">
                <Fragment set:html={renderedText} />
              </div>
            )
          }
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .content-section {
    position: relative;
    /* Background handled by utility class */
  }

  .content-section::before {
    display: none;
  }

  /* Content layer sits above background pattern */
  .content-layer {
    z-index: 1;
  }

  .content-wrapper {
    display: grid;
    grid-template-columns: 0.5rem 1fr;
    gap: 2rem;
    background: color-mix(in srgb, var(--bg-elevated), transparent 10%);
    backdrop-filter: blur(12px);
    border-radius: 1.25rem;
    padding: 2.5rem 2rem;
    border: 1px solid var(--border-primary);
    box-shadow: var(--shadow-lg);
    transition: all var(--transition-slow);
  }

  @media (min-width: 768px) {
    .content-wrapper {
      padding: 3rem 3rem;
      gap: 2.5rem;
    }
  }

  .content-wrapper:hover {
    box-shadow: var(--shadow-xl);
    border-color: var(--color-accent);
  }

  /* Accent sidebar with gradient */
  .accent-sidebar {
    position: relative;
    background: linear-gradient(
      180deg,
      var(--color-accent) 0%,
      var(--color-accent-dark) 50%,
      var(--color-primary) 100%
    );
    border-radius: 0.5rem;
    z-index: 1;
  }

  .content-main {
    min-width: 0; /* Fix for grid overflow */
  }

  /* Title group with icon */
  .title-group {
    display: flex;
    align-items: center;
    gap: 1rem;
    margin-bottom: 2rem;
  }

  .title-icon {
    font-size: 2.5rem;
    flex-shrink: 0;
    filter: drop-shadow(0 2px 4px var(--shadow-sm));
  }

  .section-title {
    font-size: 1.875rem;
    font-weight: 800;
    line-height: 1.2;
    color: var(--text-primary);
    letter-spacing: -0.01em;
  }

  @media (min-width: 768px) {
    .section-title {
      font-size: 2.5rem;
    }
  }

  /* Custom prose styling */
  .prose-custom {
    color: var(--text-secondary);
  }

  .prose-custom :global(p) {
    font-size: 1rem;
    line-height: 1.75;
    color: var(--text-secondary);
    margin-bottom: 1.25rem;
  }

  @media (min-width: 768px) {
    .prose-custom :global(p) {
      font-size: 1.0625rem;
    }
  }

  .prose-custom :global(strong) {
    font-weight: 700;
    color: var(--text-primary);
  }

  .prose-custom :global(ul),
  .prose-custom :global(ol) {
    margin: 1.5rem 0;
    padding-left: 1.5rem;
    display: grid;
    gap: 0.75rem;
  }

  .prose-custom :global(li) {
    color: var(--text-secondary);
    position: relative;
    padding-left: 0.5rem;
  }

  .prose-custom :global(ul li)::marker {
    color: var(--color-accent);
  }

  .prose-custom :global(a) {
    color: var(--color-accent);
    text-decoration: none;
    font-weight: 600;
    transition: color var(--transition-base);
    border-bottom: 2px solid transparent;
  }

  .prose-custom :global(a:hover) {
    color: var(--color-accent-dark);
    border-bottom-color: var(--color-accent);
  }

  .prose-custom :global(h1),
  .prose-custom :global(h2),
  .prose-custom :global(h3),
  .prose-custom :global(h4),
  .prose-custom :global(h5),
  .prose-custom :global(h6) {
    color: var(--text-primary);
    font-weight: 700;
    margin-top: 2rem;
    margin-bottom: 1rem;
    line-height: 1.3;
  }

  .prose-custom :global(h3) {
    font-size: 1.25rem;
    color: var(--color-primary);
  }

  @media (min-width: 768px) {
    .prose-custom :global(h3) {
      font-size: 1.5rem;
    }
  }
</style>
