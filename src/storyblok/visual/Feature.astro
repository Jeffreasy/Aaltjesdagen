---
import { storyblokEditable } from '@storyblok/astro'

const { blok } = Astro.props
---

<div
  {...storyblokEditable(blok)}
  class='group h-full flex flex-col bg-white border border-gray-100 shadow-sm rounded-2xl overflow-hidden hover:shadow-xl hover:-translate-y-1 transition-all duration-300'
>
  {/* Afbeelding Sectie */}
  <div class="relative h-48 overflow-hidden">
    {blok.Fotokaart?.[0]?.filename ? (
      <img
        src={`${blok.Fotokaart[0].filename}/m/600x400/filters:quality(80)`}
        alt={blok.title || blok.name}
        class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-500"
      />
    ) : (
      <div class="w-full h-full bg-gradient-to-br from-primary/10 to-secondary/10 flex items-center justify-center">
        <span class="text-primary/20 font-bold text-4xl">AD</span>
      </div>
    )}
  </div>

  {/* Content Sectie */}
  <div class="p-6 flex flex-col flex-grow">
    {blok.Resourcetitle && (
      <p class="text-secondary font-bold text-xs uppercase tracking-widest mb-2">
        {blok.Resourcetitle}
      </p>
    )}
    
    <h3 class='text-xl text-gray-900 font-extrabold mb-3 group-hover:text-primary transition-colors'>
      {blok.title || blok.name}
    </h3>

    <div class="flex flex-wrap gap-4 mb-4">
      {blok.Tijd && (
        <div class="flex items-center gap-2 text-gray-500 text-xs font-medium">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 text-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
          </svg>
          <span>
            {new Date(blok.Tijd).toLocaleDateString('nl-NL', {
              day: 'numeric',
              month: 'long',
              hour: '2-digit',
              minute: '2-digit'
            })} uur
          </span>
        </div>
      )}

      {(blok.Locatie || blok.locatie) && (
        <div class="flex items-center gap-2 text-gray-500 text-xs font-medium">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 text-secondary" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
          </svg>
          <span>{blok.Locatie || blok.locatie}</span>
        </div>
      )}
    </div>

    {blok.resourceinhoud && (
      <div class="text-gray-600 leading-relaxed text-sm line-clamp-3 mb-6">
        {blok.resourceinhoud}
      </div>
    )}

    <div class="mt-auto pt-4 border-t border-gray-50 flex justify-between items-center">
      <span class="text-primary font-bold text-sm inline-flex items-center group-hover:gap-2 transition-all">
        Lees meer
        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 opacity-0 group-hover:opacity-100 transition-all" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
        </svg>
      </span>
    </div>
  </div>
</div>
