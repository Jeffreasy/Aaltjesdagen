---
import { storyblokEditable, renderRichText } from "@storyblok/astro";

const { blok } = Astro.props;

// Storyblok field mapping: title (text), text (richtext)
const title = blok.title || "";
const tekst = blok.tekst; // Richtext field

// Render richtext content to HTML
const renderedText = tekst ? renderRichText(tekst) : "";
---

<section
  {...storyblokEditable(blok)}
  class="access-section bg-transparent relative overflow-hidden"
  style="background: transparent !important;"
>
  <div class="relative container-custom section-spacing-sm content-layer">
    <!-- Compact centered layout with highlighted border -->
    <div class="max-w-5xl mx-auto">
      <div class="access-card">
        <!-- Top accent border -->
        <div class="top-accent"></div>

        <!-- Content wrapper -->
        <div class="card-wrapper">
          {
            title && (
              <div class="header-section">
                <div class="icon-wrapper">
                  <span class="accessibility-icon">â™¿</span>
                </div>
                <h2 class="access-title">{title}</h2>
              </div>
            )
          }

          {
            renderedText && (
              <div class="content-section prose-access">
                <Fragment set:html={renderedText} />
              </div>
            )
          }
        </div>

        <!-- Decorative corner elements -->
        <div class="corner-decoration top-left"></div>
        <div class="corner-decoration bottom-right"></div>
      </div>
    </div>
  </div>
</section>

<style>
  .access-section {
    /* Background handled by utility class */
  }

  /* Background pattern layer */
  .pattern-background {
    z-index: 0;
    pointer-events: none;
  }

  /* Content layer sits above background */
  .content-layer {
    z-index: 1;
  }

  .access-card {
    position: relative;
    background: color-mix(in srgb, var(--bg-elevated), transparent 10%);
    backdrop-filter: blur(12px);
    border-radius: 1.5rem;
    overflow: hidden;
    box-shadow:
      var(--shadow-lg),
      0 0 0 1px var(--border-primary);
    transition: all var(--transition-slow);
  }

  .access-card:hover {
    box-shadow:
      0 25px 50px -12px color-mix(in srgb, var(--color-accent), transparent 75%),
      0 0 0 2px var(--color-accent);
    transform: scale(1.01);
  }

  /* Top accent border */
  .top-accent {
    position: relative;
    height: 0.375rem;
    background: linear-gradient(
      90deg,
      var(--color-accent) 0%,
      var(--color-accent-dark) 50%,
      var(--color-accent) 100%
    );
    z-index: 1;
  }

  .card-wrapper {
    padding: 3rem 2rem;
  }

  @media (min-width: 768px) {
    .card-wrapper {
      padding: 4rem 3.5rem;
    }
  }

  /* Header section */
  .header-section {
    display: flex;
    align-items: center;
    gap: 1.5rem;
    margin-bottom: 2.5rem;
    padding-bottom: 2rem;
    border-bottom: 2px solid var(--border-secondary);
  }

  @media (max-width: 767px) {
    .header-section {
      flex-direction: column;
      text-align: center;
    }
  }

  .icon-wrapper {
    flex-shrink: 0;
    width: 4.5rem;
    height: 4.5rem;
    background: linear-gradient(
      135deg,
      var(--color-accent) 0%,
      var(--color-accent-dark) 100%
    );
    border-radius: 1rem;
    display: flex;
    align-items: center;
    justify-content: center;
    box-shadow: 0 8px 16px -4px
      color-mix(in srgb, var(--color-accent), transparent 60%);
  }

  .accessibility-icon {
    font-size: 2.25rem;
    filter: drop-shadow(0 2px 4px var(--shadow-sm));
  }

  .access-title {
    font-size: 2rem;
    font-weight: 800;
    line-height: 1.2;
    color: var(--text-primary);
    letter-spacing: -0.01em;
    flex: 1;
  }

  @media (min-width: 768px) {
    .access-title {
      font-size: 2.5rem;
    }
  }

  /* Content section */
  .content-section {
    position: relative;
  }

  /* Corner decorations */
  .corner-decoration {
    position: absolute;
    width: 3rem;
    height: 3rem;
    pointer-events: none;
    z-index: 0;
  }

  .corner-decoration::before,
  .corner-decoration::after {
    content: "";
    position: absolute;
    background: var(--color-accent);
    opacity: 0.15;
    z-index: 0;
  }

  .corner-decoration.top-left {
    top: 1rem;
    left: 1rem;
  }

  .corner-decoration.top-left::before {
    top: 0;
    left: 0;
    width: 100%;
    height: 2px;
  }

  .corner-decoration.top-left::after {
    top: 0;
    left: 0;
    width: 2px;
    height: 100%;
  }

  .corner-decoration.bottom-right {
    bottom: 1rem;
    right: 1rem;
  }

  .corner-decoration.bottom-right::before {
    bottom: 0;
    right: 0;
    width: 100%;
    height: 2px;
  }

  .corner-decoration.bottom-right::after {
    bottom: 0;
    right: 0;
    width: 2px;
    height: 100%;
  }

  /* Custom prose styling */
  .prose-access :global(p) {
    font-size: 1rem;
    line-height: 1.8;
    color: var(--text-secondary);
    margin-bottom: 1.25rem;
  }

  @media (min-width: 768px) {
    .prose-access :global(p) {
      font-size: 1.0625rem;
    }
  }

  .prose-access :global(strong) {
    font-weight: 700;
    color: var(--color-accent-dark);
  }

  .prose-access :global(ul),
  .prose-access :global(ol) {
    margin: 2rem 0;
    padding-left: 1.75rem;
    display: grid;
    gap: 1rem;
  }

  .prose-access :global(li) {
    color: var(--text-secondary);
    position: relative;
    padding-left: 0.75rem;
  }

  .prose-access :global(ul li)::marker {
    color: var(--color-accent);
    font-size: 1.25em;
  }

  .prose-access :global(a) {
    color: var(--color-accent);
    text-decoration: none;
    font-weight: 600;
    position: relative;
    transition: all var(--transition-base);
    padding-bottom: 2px;
  }

  .prose-access :global(a::after) {
    content: "";
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    height: 2px;
    background: var(--color-accent);
    transform: scaleX(0);
    transition: transform var(--transition-base);
    transform-origin: right;
  }

  .prose-access :global(a:hover) {
    color: var(--color-accent-dark);
  }

  .prose-access :global(a:hover::after) {
    transform: scaleX(1);
    transform-origin: left;
  }

  .prose-access :global(h1),
  .prose-access :global(h2),
  .prose-access :global(h3),
  .prose-access :global(h4),
  .prose-access :global(h5),
  .prose-access :global(h6) {
    color: var(--text-primary);
    font-weight: 700;
    margin-top: 2rem;
    margin-bottom: 1rem;
    line-height: 1.3;
  }

  .prose-access :global(h3) {
    font-size: 1.25rem;
    color: var(--color-accent-dark);
    background: linear-gradient(90deg, var(--color-accent), transparent);
    background-size: 100% 2px;
    background-repeat: no-repeat;
    background-position: left bottom;
    padding-bottom: 0.5rem;
  }

  @media (min-width: 768px) {
    .prose-access :global(h3) {
      font-size: 1.5rem;
    }
  }
</style>
