---
/**
 * StallenFietsen Component
 * Migrated to use base components from src/components/accessibility/
 * - IconBadge.astro: Replaces manual icon implementation
 * - ContentCard.astro: Replaces manual card wrapper (partially - sidebar accent is component-specific)
 */
import { storyblokEditable } from "@storyblok/astro";
import { renderText } from "@aaltjesdagen/ui/utils";
import type { BereikbaarheidProps, StallenFietsenBlok } from "./types";
import IconBadge from "../../../components/accessibility/IconBadge.astro";
import ContentCard from "../../../components/accessibility/ContentCard.astro";

interface Props extends BereikbaarheidProps<StallenFietsenBlok> {}

const { blok } = Astro.props;

// Storyblok field mapping: title (text), text (richtext)
const title = blok.title || "";
const tekst = blok.tekst; // Richtext field

// Render richtext content to HTML
const renderedText = renderText(tekst);
---

<section
  {...storyblokEditable(blok)}
  class="content-section !bg-transparent relative"
>
  <div class="section-container content-layer">
    <!-- Wide layout with side accent -->
    <div class="max-w-6xl mx-auto">
      <div class="content-wrapper-outer">
        <!-- Accent sidebar - unique to this component, not extracted to base -->
        <div class="accent-sidebar"></div>

        <!-- Main content wrapped in ContentCard for consistent styling -->
        <ContentCard variant="default" padding="md" class="content-main">
          {
            title && (
              <div class="title-group">
                {/* IconBadge replaces manual icon implementation (lines 117-121) */}
                <IconBadge icon="ðŸš²" variant="accent" size="lg" />
                <h2 class="section-title">{title}</h2>
              </div>
            )
          }

          {
            renderedText && (
              <div class="prose-base prose-accent">
                <Fragment set:html={renderedText} />
              </div>
            )
          }
        </ContentCard>
      </div>
    </div>
  </div>
</section>

<style>
  /* === Component-specific styles === */
  /* Layout and positioning only - card/icon styling now handled by base components */

  .content-section {
    position: relative;
    /* Background handled by utility class */
  }

  .content-section::before {
    display: none;
  }

  /* Content layer - sits above background pattern */
  .content-layer {
    z-index: var(--z-content);
  }

  /* Grid wrapper with sidebar accent - unique to this component */
  .content-wrapper-outer {
    display: grid;
    grid-template-columns: 0.5rem 1fr;
    gap: 2rem;
  }

  @media (min-width: 768px) {
    .content-wrapper-outer {
      gap: 2.5rem;
    }
  }

  /* Accent sidebar with gradient - unique to this component, not extracted to base */
  .accent-sidebar {
    position: relative;
    background: linear-gradient(
      180deg,
      var(--color-accent) 0%,
      var(--color-accent-dark) 50%,
      var(--color-primary) 100%
    );
    border-radius: 0.5rem;
    z-index: var(--z-content);
  }

  .content-main {
    min-width: 0; /* Fix for grid overflow */
  }

  /* Title group with icon badge */
  .title-group {
    display: flex;
    align-items: center;
    gap: 1rem;
    margin-bottom: 2rem;
  }

  .section-title {
    font-size: 1.875rem;
    font-weight: 800;
    line-height: 1.2;
    color: var(--text-primary);
    letter-spacing: -0.01em;
  }

  @media (min-width: 768px) {
    .section-title {
      font-size: 2.5rem;
    }
  }
</style>

