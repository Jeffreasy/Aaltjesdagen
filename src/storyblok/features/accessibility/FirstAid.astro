---
// PHASE 2 MIGRATION: Refactored to use base components
// - IconBadge.astro replaces .medical-badge styling (~40 lines removed)
// - ContentCard.astro replaces .ehbo-card styling (~20 lines removed)
// - Kept component-specific: .medical-strip, .alert-indicator
import { storyblokEditable } from "@storyblok/astro";
import { renderText } from "@laventecare/astro-ui/utils/storyblok";
import type { BereikbaarheidProps, EhboPostenBlok } from "./types";
import { ContentCard, IconBadge } from "@laventecare/astro-ui/components";

interface Props extends BereikbaarheidProps<EhboPostenBlok> {}

const { blok } = Astro.props;

// Storyblok field mapping: title (text), text (richtext)
const title = blok.title || "";
const tekst = blok.tekst; // Richtext field

// Render richtext content to HTML
const renderedText = renderText(tekst);
---

<section
  {...storyblokEditable(blok)}
  class="ehbo-section !bg-transparent relative overflow-hidden"
>
  <div class="section-container content-layer">
    <!-- Compact card with medical theme -->
    <div class="max-w-4xl mx-auto">
      <ContentCard variant="elevated" padding="lg" maxWidth="full">
        <!-- Red accent strip (medical theme) -->
        <div class="medical-strip"></div>

        <div class="card-body">
          {
            title && (
              <div class="ehbo-header">
                <IconBadge
                  icon="ðŸ¥"
                  variant="error"
                  size="lg"
                  animation="pulse"
                />
                <h2 class="ehbo-title">{title}</h2>
              </div>
            )
          }

          {
            renderedText && (
              <div class="ehbo-content prose-base prose-error">
                <Fragment set:html={renderedText} />
              </div>
            )
          }
        </div>

        <!-- Alert indicator -->
        <div class="alert-indicator">
          <div class="indicator-dot"></div>
          <span class="indicator-text">Belangrijk</span>
        </div>
      </ContentCard>
    </div>
  </div>
</section>

<style>
  .ehbo-section {
    position: relative;
    /* Background handled by utility class */
  }

  /* Background pattern layer - sits at base layer */
  .pattern-background {
    z-index: var(--z-base);
    pointer-events: none;
  }

  /* Content layer - sits above background */
  .content-layer {
    z-index: var(--z-content);
  }

  /* Medical-themed red accent strip - component-specific */
  .medical-strip {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 0.5rem;
    background: linear-gradient(
      90deg,
      var(--color-error) 0%,
      color-mix(in srgb, var(--color-error), black 10%) 50%,
      var(--color-error) 100%
    );
  }

  /* Pattern overlay sits at base layer within medical strip */
  .medical-strip::after {
    content: "";
    position: absolute;
    inset: 0;
    background: repeating-linear-gradient(
      90deg,
      transparent,
      transparent 2rem,
      color-mix(in srgb, var(--text-inverse), transparent 80%) 2rem,
      color-mix(in srgb, var(--text-inverse), transparent 80%) 2.5rem
    );
    z-index: var(--z-base);
  }

  .card-body {
    position: relative;
    margin-top: 0.5rem;
  }

  /* Header with medical badge */
  .ehbo-header {
    display: flex;
    align-items: center;
    gap: 1.5rem;
    margin-bottom: 2.5rem;
  }

  @media (max-width: 767px) {
    .ehbo-header {
      flex-direction: column;
      text-align: center;
    }
  }

  .ehbo-title {
    font-size: 2rem;
    font-weight: 800;
    line-height: 1.2;
    color: var(--text-primary);
    letter-spacing: -0.01em;
    flex: 1;
  }

  @media (min-width: 768px) {
    .ehbo-title {
      font-size: 2.5rem;
    }
  }

  /* Alert indicator - sits above content layer - component-specific */
  .alert-indicator {
    position: absolute;
    top: 2rem;
    right: 2rem;
    display: flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.5rem 1rem;
    background: color-mix(in srgb, var(--color-error), transparent 90%);
    border: 1px solid color-mix(in srgb, var(--color-error), transparent 70%);
    border-radius: 2rem;
    backdrop-filter: blur(8px);
    z-index: calc(var(--z-content) + 1);
  }

  @media (max-width: 767px) {
    .alert-indicator {
      top: 1rem;
      right: 1rem;
    }
    .indicator-text {
      display: none;
    }
  }

  .indicator-dot {
    width: 0.5rem;
    height: 0.5rem;
    background: var(--color-error);
    border-radius: 50%;
    animation: pulse-dot 2s ease-in-out infinite;
  }

  @keyframes pulse-dot {
    0%,
    100% {
      opacity: 1;
      transform: scale(1);
    }
    50% {
      opacity: 0.5;
      transform: scale(1.2);
    }
  }

  .indicator-text {
    font-size: 0.875rem;
    font-weight: 600;
    color: var(--color-error);
  }

  /* Content */
  .ehbo-content {
    position: relative;
  }
</style>
