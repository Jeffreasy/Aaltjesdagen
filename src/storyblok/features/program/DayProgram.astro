---
import { storyblokEditable } from "@storyblok/astro";
import { ProgramModal, FilterBar } from "@laventecare/astro-ui/components";
import { formatDate } from "@laventecare/astro-ui/utils";
import { storyblokImage } from "@laventecare/astro-ui/utils/storyblok";

const { blok } = Astro.props;

// Bepaal de dagtitel dynamisch (Dag1Titel, Dag2Titel, of Dag3Titel)
const dagTitel = blok.Dag1Titel || blok.Dag2Titel || blok.Dag3Titel;

// Extraheer unieke locaties uit de Programmas voor de filters
const locations: string[] = [
  ...new Set(
    blok.Programmas?.map((prog: any) => prog.Locatie || prog.locatie).filter(
      Boolean,
    ),
  ),
] as string[];
const hasFilters = locations.length > 0;

// Sorteer programmas op tijd
const sortedProgrammas = blok.Programmas
  ? [...blok.Programmas].sort((a, b) => {
      const timeA = a.Tijd ? new Date(a.Tijd).getTime() : 0;
      const timeB = b.Tijd ? new Date(b.Tijd).getTime() : 0;
      return timeA - timeB;
    })
  : [];

// Serialize data voor client-side gebruik
const programsDataJson = JSON.stringify(sortedProgrammas);
---

<section
  {...storyblokEditable(blok)}
  class="section-spacing relative overflow-hidden"
  x-data={`{ activeFilter: 'all', modalOpen: false, selectedProgram: null, programs: ${programsDataJson} }`}
  @keydown.escape.window="modalOpen = false"
>
  <!-- Decorative gradient orbs -->
  <div class="decorative-orb-primary top-20 right-10"></div>
  <div class="decorative-orb-accent bottom-20 left-10"></div>

  <div class="container-custom relative z-10">
    <!-- Header Section -->
    <div class="text-center max-w-4xl mx-auto mb-16">
      {
        blok.TitelProgramma && (
          <div
            class="inline-flex items-center gap-3 px-5 py-2 rounded-full shadow-sm mb-8"
            style="background: var(--bg-base); border: 1px solid var(--border-primary);"
          >
            <span class="relative flex h-2 w-2">
              <span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-secondary opacity-75" />
              <span class="relative inline-flex rounded-full h-2 w-2 bg-secondary" />
            </span>
            <span
              class="font-black text-xs uppercase tracking-[0.2em]"
              style="color: var(--color-accent);"
            >
              {blok.TitelProgramma}
            </span>
          </div>
        )
      }

      {
        dagTitel && (
          <h2
            class="text-4xl md:text-7xl font-black mb-8 tracking-tighter leading-none"
            style="color: var(--color-accent);"
          >
            {formatDate(dagTitel)}
          </h2>
        )
      }

      <div class="flex justify-center items-center gap-4 mb-10">
        <div
          class="h-px w-20 bg-gradient-to-r from-transparent to-gray-300 dark:to-gray-600"
        >
        </div>
        <div
          class="font-black text-xl italic tracking-tighter"
          style="color: var(--color-accent);"
        >
          {dagTitel && new Date(dagTitel).getFullYear()}
        </div>
        <div
          class="h-px w-20 bg-gradient-to-l from-transparent to-gray-300 dark:to-gray-600"
        >
        </div>
      </div>

      {
        blok.headline && blok.TitelProgramma !== blok.headline && (
          <p
            class="text-xl md:text-2xl font-medium max-w-2xl mx-auto leading-relaxed"
            style="color: var(--text-secondary);"
          >
            {blok.headline}
          </p>
        )
      }
    </div>

    {/* Filter Bar with Glassmorphism */}
    {
      hasFilters && (
        <FilterBar
          categories={locations}
          filterField="Locatie"
          allText="Alles"
          showCount={true}
          items={sortedProgrammas}
          gradientVariant="primary"
          spacing="sm"
        />
      )
    }

    {/* Compact Agenda Table View */}
    <div class="max-w-7xl mx-auto">
      <div class="card-base overflow-hidden">
        <!-- Table for Desktop -->
        <div class="hidden md:block overflow-x-auto">
          <table class="w-full">
            <thead
              class="bg-gradient-to-r from-gray-50 to-primary/5 dark:from-gray-800 dark:to-gray-800/30 border-b-2 border-primary/10 dark:border-primary/20"
            >
              <tr>
                <th
                  class="px-4 py-3 text-left text-xs font-black text-primary uppercase tracking-wider whitespace-nowrap"
                  >Tijd</th
                >
                <th
                  class="px-4 py-3 text-left text-xs font-black text-primary uppercase tracking-wider"
                  >Programma</th
                >
                <th
                  class="px-4 py-3 text-left text-xs font-black text-primary uppercase tracking-wider whitespace-nowrap"
                  >Locatie</th
                >
                <th
                  class="px-4 py-3 text-center text-xs font-black text-primary uppercase tracking-wider w-24"
                  >Details</th
                >
              </tr>
            </thead>
            <tbody class="divide-y divide-gray-100 dark:divide-gray-700">
              {
                sortedProgrammas.map((prog: any, index: number) => {
                  const location = prog.Locatie || prog.locatie || "all";
                  return (
                    <tr
                      x-show={`activeFilter === 'all' || activeFilter === '${location}'`}
                      class="scroll-slide-up hover:bg-primary/5 transition-colors group cursor-pointer"
                      @click={`modalOpen = true; selectedProgram = ${index}`}
                    >
                      <td class="px-4 py-3 whitespace-nowrap">
                        <div class="flex items-center gap-2">
                          <div class="w-10 h-10 rounded-lg bg-gradient-to-br from-primary to-teal-600 flex items-center justify-center flex-shrink-0">
                            <svg
                              xmlns="http://www.w3.org/2000/svg"
                              class="h-5 w-5 text-white"
                              fill="none"
                              viewBox="0 0 24 24"
                              stroke="currentColor"
                            >
                              <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"
                              />
                            </svg>
                          </div>
                          <span
                            class="text-sm font-bold"
                            style="color: var(--text-primary);"
                          >
                            {prog.Tijd
                              ? new Date(prog.Tijd).toLocaleTimeString(
                                  "nl-NL",
                                  { hour: "2-digit", minute: "2-digit" },
                                )
                              : "-"}
                          </span>
                        </div>
                      </td>

                      <td class="px-4 py-3">
                        <div class="flex items-center gap-3">
                          {prog.Fotokaart?.[0]?.filename && (
                            <img
                              src={storyblokImage(
                                prog.Fotokaart[0].filename,
                                80,
                                80,
                              )}
                              alt={prog.title || prog.name}
                              class="w-12 h-12 rounded-lg object-cover flex-shrink-0 border border-gray-200 dark:border-gray-700"
                              width="80"
                              height="80"
                              loading="lazy"
                            />
                          )}
                          <div class="min-w-0">
                            <h4
                              class="program-title text-sm md:text-base font-bold transition-all duration-300 truncate"
                              style="color: var(--text-primary);"
                            >
                              {prog.title || prog.name}
                            </h4>
                            {prog.Resourcetitle && (
                              <p
                                class="text-xs font-semibold uppercase tracking-wide mt-0.5"
                                style="color: var(--color-accent);"
                              >
                                {prog.Resourcetitle}
                              </p>
                            )}
                          </div>
                        </div>
                      </td>

                      <td class="px-4 py-3">
                        {location !== "all" && (
                          <span class="inline-flex items-center gap-1.5 text-xs font-bold px-3 py-1.5 bg-gradient-to-r from-secondary to-orange-600 text-white rounded-lg shadow-sm whitespace-nowrap">
                            <svg
                              xmlns="http://www.w3.org/2000/svg"
                              class="h-3.5 w-3.5"
                              fill="none"
                              viewBox="0 0 24 24"
                              stroke="currentColor"
                            >
                              <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"
                              />
                              <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"
                              />
                            </svg>
                            {location}
                          </span>
                        )}
                      </td>

                      <td class="px-4 py-3 text-center">
                        <div class="inline-flex items-center justify-center w-8 h-8 rounded-lg bg-gray-100 dark:bg-gray-700 group-hover:bg-primary/10 dark:group-hover:bg-primary/20 group-hover:scale-110 transition-all">
                          <svg
                            xmlns="http://www.w3.org/2000/svg"
                            class="h-5 w-5 text-gray-600 dark:text-gray-300 group-hover:text-primary transition-colors"
                            fill="none"
                            viewBox="0 0 24 24"
                            stroke="currentColor"
                          >
                            <path
                              stroke-linecap="round"
                              stroke-linejoin="round"
                              stroke-width="2"
                              d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"
                            />
                          </svg>
                        </div>
                      </td>
                    </tr>
                  );
                })
              }
            </tbody>
          </table>
        </div>

        <!-- Mobile Compact List -->
        <div class="md:hidden divide-y divide-gray-100 dark:divide-gray-700">
          {
            sortedProgrammas.map((prog: any, index: number) => {
              const location = prog.Locatie || prog.locatie || "all";
              return (
                <div
                  x-show={`activeFilter === 'all' || activeFilter === '${location}'`}
                  class="scroll-slide-up p-4 hover:bg-primary/5 transition-colors cursor-pointer"
                  @click={`modalOpen = true; selectedProgram = ${index}`}
                >
                  <div class="flex items-start gap-3">
                    <div class="flex-shrink-0">
                      <div class="w-12 h-12 rounded-lg bg-gradient-to-br from-primary to-teal-600 flex flex-col items-center justify-center text-white">
                        <span class="text-xs font-bold leading-tight">
                          {prog.Tijd
                            ? new Date(prog.Tijd)
                                .toLocaleTimeString("nl-NL", {
                                  hour: "2-digit",
                                  minute: "2-digit",
                                })
                                .split(":")[0]
                            : "-"}
                        </span>
                        <span class="text-[10px] leading-none">
                          {prog.Tijd
                            ? new Date(prog.Tijd)
                                .toLocaleTimeString("nl-NL", {
                                  hour: "2-digit",
                                  minute: "2-digit",
                                })
                                .split(":")[1]
                            : ""}
                        </span>
                      </div>
                    </div>

                    <div class="flex-1 min-w-0">
                      <h4
                        class="program-title text-sm font-bold mb-1 line-clamp-2 transition-all duration-300"
                        style="color: var(--text-primary);"
                      >
                        {prog.title || prog.name}
                      </h4>
                      <div class="flex flex-wrap gap-2">
                        {prog.Resourcetitle && (
                          <span class="text-[10px] text-secondary font-bold uppercase tracking-wide">
                            {prog.Resourcetitle}
                          </span>
                        )}
                        {location !== "all" && (
                          <span class="inline-flex items-center gap-1 text-[10px] font-bold px-2 py-0.5 bg-gradient-to-r from-secondary to-orange-600 text-white rounded">
                            {location}
                          </span>
                        )}
                      </div>
                    </div>

                    <div class="flex-shrink-0 pt-1">
                      <div class="w-8 h-8 rounded-lg bg-gray-100 dark:bg-gray-700 flex items-center justify-center">
                        <svg
                          xmlns="http://www.w3.org/2000/svg"
                          class="h-5 w-5 text-gray-600 dark:text-gray-300"
                          fill="none"
                          viewBox="0 0 24 24"
                          stroke="currentColor"
                        >
                          <path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            stroke-width="2"
                            d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"
                          />
                        </svg>
                      </div>
                    </div>
                  </div>
                </div>
              );
            })
          }
        </div>
      </div>
    </div>

    {/* Empty State */}
    {
      sortedProgrammas.length === 0 && (
        <div class="text-center py-20">
          <div class="card-base max-w-md mx-auto p-12">
            <div class="w-16 h-16 mx-auto mb-4 bg-gray-100 dark:bg-gray-700 rounded-full flex items-center justify-center">
              <svg
                xmlns="http://www.w3.org/2000/svg"
                class="h-8 w-8 text-gray-400 dark:text-gray-500"
                fill="none"
                viewBox="0 0 24 24"
                stroke="currentColor"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"
                />
              </svg>
            </div>
            <p class="text-gray-500 dark:text-gray-400 text-lg font-medium">
              Geen programma's gepland
            </p>
          </div>
        </div>
      )
    }
  </div>

  <!-- Modal Component -->
  <ProgramModal />
</section>

<style>
  /* Program Title Hover Effects */
  .program-title {
    position: relative;
    display: inline-block;
  }

  /* Desktop: Change color and add underline on row hover */
  tr:hover .program-title,
  .program-title:hover {
    color: #ff7e67 !important; /* Coral - Direct value to match navigation hover */
  }

  /* Mobile: Change color on container hover */
  div:hover > div > .program-title {
    color: #ff7e67 !important; /* Coral - Direct value */
  }

  /* Decorative underline effect on desktop */
  @media (min-width: 768px) {
    .program-title::after {
      content: "";
      position: absolute;
      bottom: -2px;
      left: 0;
      width: 0;
      height: 2px;
      background: #ff7e67; /* Coral */
      transition: width 0.3s ease;
    }

    tr:hover .program-title::after,
    .program-title:hover::after {
      width: 100%;
    }
  }

  /* Ensure smooth transitions */
  @media (prefers-reduced-motion: reduce) {
    .program-title,
    .program-title::after {
      transition: none !important;
    }
  }
</style>
