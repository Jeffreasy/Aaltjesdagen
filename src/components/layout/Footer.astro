---
/**
 * Footer Component - Aaltjesdagen
 *
 * Professionele footer met:
 * - 4-kolom grid layout (responsive: 1 â†’ 4 kolommen)
 * - Logo + Beschrijving
 * - Snelle Links (navigatie)
 * - Contact informatie
 * - Social media + Newsletter
 * - Privacy/Cookie links
 * - Design system compliant (adaptief light/dark theme)
 */
import Navigation from "./Navigation.astro";

const currentYear = new Date().getFullYear();

const socialLinks = [
  {
    name: "Facebook",
    href: "https://facebook.com/aaltjesdagen",
    icon: "M18 2h-3a5 5 0 00-5 5v3H7v4h3v8h4v-8h3l1-4h-4V7a1 1 0 011-1h3z", // Facebook path
  },
  {
    name: "Instagram",
    href: "https://instagram.com/aaltjesdagen",
    icon: "M16 11.37A4 4 0 1112.63 8 4 4 0 0116 11.37zm1.5-4.87h.01M6.5 6.5h11v11h-11v-11z M7 2h10a5 5 0 015 5v10a5 5 0 01-5 5H7a5 5 0 01-5-5V7a5 5 0 015-5z", // Instagram paths (combined)
  },
  {
    name: "Twitter",
    href: "https://twitter.com/aaltjesdagen",
    icon: "M23 3a10.9 10.9 0 01-3.14 1.53 4.48 4.48 0 00-7.86 3v1A10.66 10.66 0 013 4s-4 9 5 13a11.64 11.64 0 01-7 2c9 5 20 0 20-11.5a4.5 4.5 0 00-.08-.83A7.72 7.72 0 0023 3z", // Twitter path
  },
];

const legalLinks = [
  { name: "Privacy Policy", href: "/privacy" },
  { name: "Cookie Settings", href: "/cookies" },
  { name: "Algemene Voorwaarden", href: "/voorwaarden" },
];
---

<footer
  class="relative bg-[var(--bg-elevated)] text-[var(--text-primary)] py-16 overflow-hidden transition-colors duration-300 border-t border-[var(--border-secondary)]"
>
  <!-- Decorative Background Pattern -->
  <div
    class="absolute inset-0 bg-professional-dots opacity-50"
    aria-hidden="true"
  >
  </div>

  <!-- Decorative Gradient Top Border -->
  <div
    class="absolute top-0 left-0 w-full h-1 bg-gradient-to-r from-secondary via-accent to-primary"
    aria-hidden="true"
  >
  </div>

  <!-- Footer Content -->
  <div class="container-custom relative z-10">
    <!-- Main Grid: 4 kolommen op desktop, 1 kolom op mobile -->
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-12 mb-12">
      <!-- Kolom 1: Logo + Beschrijving -->
      <div class="lg:col-span-1">
        <img
          src="/assets/logo.png"
          alt="Aaltjesdagen Logo"
          width="150"
          height="50"
          class="h-10 w-auto mb-6 brightness-0 dark:invert transition-all duration-300 opacity-90"
        />
        <p class="text-sm leading-relaxed text-[var(--text-secondary)]">
          Het grootste evenement van Harderwijk! Kom en geniet van muziek,
          cultuur en gezelligheid tijdens de jaarlijkse Aaltjesdagen.
        </p>
      </div>

      <!-- Kolom 2: Snelle Links -->
      <div>
        <h3
          class="text-[var(--text-primary)] font-bold text-lg mb-6 flex items-center gap-2"
        >
          <span class="w-1 h-6 bg-secondary rounded-full" aria-hidden="true"
          ></span>
          Snelle Links
        </h3>
        <nav class="footer-nav" aria-label="Footer navigation">
          <ul class="space-y-3">
            <li><a href="/" class="footer-link">Home</a></li>
            <li>
              <a href="/bereikbaarheid" class="footer-link">Bereikbaarheid</a>
            </li>
            <li>
              <a href="/adf-muziekfestival" class="footer-link"
                >ADF Muziekfestival</a>
            </li>
            <li><a href="/braderie" class="footer-link">Braderie</a></li>
            <li><a href="/salsa" class="footer-link">Salsa</a></li>
            <li><a href="/sponsoring" class="footer-link">Sponsoring</a></li>
            <li><a href="/vacatures" class="footer-link">Vacatures</a></li>
            <li><a href="/contact" class="footer-link">Contact</a></li>
          </ul>
        </nav>
      </div>

      <!-- Kolom 3: Contact Info -->
      <div>
        <h3
          class="text-[var(--text-primary)] font-bold text-lg mb-6 flex items-center gap-2"
        >
          <span class="w-1 h-6 bg-accent rounded-full" aria-hidden="true"
          ></span>
          Contact
        </h3>
        <div class="space-y-4 text-sm text-[var(--text-secondary)]">
          <!-- Email -->
          <div class="flex items-start gap-3">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              class="h-5 w-5 mt-0.5 flex-shrink-0 text-accent"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
              aria-hidden="true"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
              ></path>
            </svg>
            <a href="mailto:info@aaltjesdagen.nl" class="footer-link">
              info@aaltjesdagen.nl
            </a>
          </div>

          <!-- Telefoon -->
          <div class="flex items-start gap-3">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              class="h-5 w-5 mt-0.5 flex-shrink-0 text-accent"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
              aria-hidden="true"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"
              ></path>
            </svg>
            <span>+31 (0)341 123 456</span>
          </div>

          <!-- Locatie -->
          <div class="flex items-start gap-3">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              class="h-5 w-5 mt-0.5 flex-shrink-0 text-accent"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
              aria-hidden="true"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"
              ></path>
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
            </svg>
            <address class="not-italic">
              Harderwijk<br />
              Gelderland, Nederland
            </address>
          </div>
        </div>
      </div>

      <!-- Kolom 4: Social Media + Newsletter -->
      <div>
        <h3
          class="text-[var(--text-primary)] font-bold text-lg mb-6 flex items-center gap-2"
        >
          <span class="w-1 h-6 bg-primary rounded-full" aria-hidden="true"
          ></span>
          Volg Ons
        </h3>

        <!-- Social Media Links -->
        <div class="flex gap-3 mb-6">
          {
            socialLinks.map((social) => (
              <a
                href={social.href}
                target="_blank"
                rel="noopener noreferrer"
                class="social-link"
                aria-label={`Volg ons op ${social.name}`}
                title={social.name}
              >
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  class="h-5 w-5"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke="currentColor"
                  aria-hidden="true"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d={social.icon}
                  />
                </svg>
              </a>
            ))
          }
        </div>

        <!-- Newsletter Signup -->
        <div class="newsletter-box">
          <p class="text-sm text-[var(--text-secondary)] mb-3 font-medium">
            Ontvang updates over Aaltjesdagen
          </p>
          <form
            class="flex gap-2"
            onsubmit="event.preventDefault(); alert('Newsletter signup coming soon!');"
          >
            <input
              type="email"
              placeholder="Uw email"
              class="newsletter-input"
              aria-label="Email voor nieuwsbrief"
              required
            />
            <button
              type="submit"
              class="newsletter-button"
              aria-label="Aanmelden voor nieuwsbrief"
            >
              <svg
                xmlns="http://www.w3.org/2000/svg"
                class="h-5 w-5"
                fill="none"
                viewBox="0 0 24 24"
                stroke="currentColor"
                aria-hidden="true"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
              </svg>
            </button>
          </form>
        </div>
      </div>
    </div>

    <!-- Bottom Section: Legal Links + Copyright -->
    <div class="border-t border-[var(--border-secondary)] pt-8">
      <!-- Legal Links -->
      <nav
        class="flex flex-wrap justify-center gap-6 mb-4"
        aria-label="Legal navigation"
      >
        {
          legalLinks.map((link) => (
            <a
              href={link.href}
              class="text-xs text-[var(--text-tertiary)] hover:text-primary transition-colors"
            >
              {link.name}
            </a>
          ))
        }
      </nav>

      <!-- Copyright -->
      <div class="text-center text-xs text-[var(--text-tertiary)]">
        <p>&copy; {currentYear} Aaltjesdagen. Alle rechten voorbehouden.</p>
      </div>
    </div>
  </div>
</footer>

<style>
  /* Footer Links */
  .footer-link {
    color: var(--text-secondary);
    text-decoration: none;
    transition: color var(--transition-base);
    display: inline-block;
  }

  .footer-link:hover {
    color: var(--color-primary);
    transform: translateX(2px);
  }

  .footer-link:focus-visible {
    outline: 2px solid var(--color-secondary);
    outline-offset: 2px;
    border-radius: 4px;
  }

  /* Social Media Links */
  .social-link {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    width: 2.75rem;
    height: 2.75rem;
    border-radius: 0.75rem;
    background: var(--bg-base);
    color: var(--text-secondary);
    border: 1px solid var(--border-secondary);
    transition: all var(--transition-base);
    box-shadow: var(--shadow-sm);
  }

  .social-link:hover {
    background: var(--color-secondary);
    border-color: var(--color-secondary);
    color: var(--text-inverse); /* White text on hover */
    transform: translateY(-3px);
    box-shadow: 0 8px 16px rgba(243, 146, 0, 0.3);
  }

  .social-link:active {
    transform: translateY(-1px);
  }

  .social-link:focus-visible {
    outline: 2px solid var(--color-secondary);
    outline-offset: 2px;
  }

  /* Newsletter Box */
  .newsletter-box {
    padding: 1rem;
    background: var(--bg-base);
    border-radius: 1rem;
    border: 1px solid var(--border-secondary);
  }

  /* Newsletter Input */
  .newsletter-input {
    flex: 1;
    padding: 0.625rem 0.875rem;
    border-radius: 0.5rem;
    background: var(--bg-elevated);
    border: 1px solid var(--border-primary);
    color: var(--text-primary);
    font-size: 0.875rem;
    transition: all var(--transition-base);
  }

  .newsletter-input::placeholder {
    color: var(--text-tertiary);
  }

  .newsletter-input:focus {
    outline: none;
    border-color: var(--color-accent);
    box-shadow: 0 0 0 3px rgba(80, 176, 174, 0.2);
  }

  /* Newsletter Button */
  .newsletter-button {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: 0.625rem;
    border-radius: 0.5rem;
    background: linear-gradient(
      135deg,
      var(--color-accent),
      var(--color-accent-dark)
    );
    color: var(--text-inverse);
    border: none;
    cursor: pointer;
    transition: all var(--transition-base);
    box-shadow: 0 4px 12px rgba(80, 176, 174, 0.3);
  }

  .newsletter-button:hover {
    transform: scale(1.05);
    box-shadow: 0 6px 16px rgba(80, 176, 174, 0.4);
  }

  .newsletter-button:active {
    transform: scale(0.95);
  }

  .newsletter-button:focus-visible {
    outline: 2px solid var(--color-accent);
    outline-offset: 2px;
  }

  /* Reduced Motion Support */
  @media (prefers-reduced-motion: reduce) {
    .footer-link,
    .social-link,
    .newsletter-input,
    .newsletter-button {
      transition: none !important;
    }

    .footer-link:hover,
    .social-link:hover {
      transform: none !important;
    }
  }
</style>
