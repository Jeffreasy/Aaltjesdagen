---
/**
 * Navigation Component - Aaltjesdagen
 *
 * Responsive navigation met:
 * - Desktop: Horizontale navigatie
 * - Mobile: Hamburger menu met slide-in
 * - Active page indicator
 * - Keyboard navigation support (Tab, Enter, Escape)
 * - Alpine.js state management
 *
 * MIGRATION: Phase 3 - Refactored to use Link component and constants
 */
import { NAVIGATION_ITEMS } from '@/constants/site';
import Link from '@/components/ui/Link.astro';
import ThemeToggle from '../ui/ThemeToggle.astro';

// Bepaal actieve pagina voor mobile nav (custom styling)
const currentPath = Astro.url.pathname;
---

<!-- Desktop Navigation (hidden op mobile) -->
<nav
  class="hidden md:flex flex-wrap items-center gap-6"
  aria-label="Main navigation"
>
  {NAVIGATION_ITEMS.map((item) => (
    <Link href={item.href} variant="nav">
      {item.name}
    </Link>
  ))}
  <ThemeToggle />
</nav>

<!-- Mobile Navigation (Right-Side Drawer) -->
<div
  class="md:hidden flex items-center gap-4"
  x-data="{ mobileMenuOpen: false }"
  @keydown.escape.window="mobileMenuOpen = false"
>
  <!-- Theme Toggle -->
  <ThemeToggle />

  <!-- Menu Toggle Button -->
  <button
    @click="mobileMenuOpen = !mobileMenuOpen"
    x-effect="mobileMenuOpen ? document.body.style.overflow = 'hidden' : document.body.style.overflow = ''"
    type="button"
    class="relative w-12 h-12 flex items-center justify-center rounded-xl transition-all"
    style="z-index: var(--z-nav-mobile-toggle);"
    :class="mobileMenuOpen ? 'fixed top-6 right-6 bg-transparent' : 'bg-elevated border border-primary/10 shadow-sm'"
    aria-label="Toggle menu"
  >
    <div class="relative w-6 h-5">
      <span
        class="absolute left-0 w-full h-0.5 bg-current transition-all rounded-full"
        :class="mobileMenuOpen ? 'top-2.5 rotate-45 bg-text-primary' : 'top-0 bg-text-primary'"
        style="transition-duration: var(--transition-duration, 300ms);"
      ></span>
      <span
        class="absolute left-0 top-2 w-full h-0.5 bg-current transition-all rounded-full bg-text-primary"
        :class="mobileMenuOpen ? 'opacity-0 scale-0' : 'opacity-100'"
        style="transition-duration: var(--transition-duration, 300ms);"
      ></span>
      <span
        class="absolute left-0 w-full h-0.5 bg-current transition-all rounded-full"
        :class="mobileMenuOpen ? 'top-2.5 -rotate-45 bg-text-primary' : 'top-4 bg-text-primary'"
        style="transition-duration: var(--transition-duration, 300ms);"
      ></span>
    </div>
  </button>

  <!-- Drawer & Backdrop -->
  <template x-teleport="body">
    <div
      class="fixed inset-0"
      style="z-index: var(--z-nav-mobile-backdrop);"
      x-show="mobileMenuOpen"
      role="dialog"
      aria-modal="true"
    >
      <!-- Backdrop -->
      <div
        class="absolute inset-0 bg-black/50 backdrop-blur-sm"
        x-show="mobileMenuOpen"
        x-transition:enter="transition ease-out"
        x-transition:enter-start="opacity-0"
        x-transition:enter-end="opacity-100"
        x-transition:leave="transition ease-in"
        x-transition:leave-start="opacity-100"
        x-transition:leave-end="opacity-0"
        @click="mobileMenuOpen = false"
        style="transition-duration: var(--transition-duration, 300ms);"
      >
      </div>

      <!-- Drawer Panel -->
      <div
        class="absolute top-0 right-0 h-full w-full max-w-sm bg-[var(--bg-base)] shadow-2xl flex flex-col border-l border-[var(--border-primary)]"
        x-show="mobileMenuOpen"
        x-transition:enter="transition transform ease-out"
        x-transition:enter-start="translate-x-full"
        x-transition:enter-end="translate-x-0"
        x-transition:leave="transition transform ease-in"
        x-transition:leave-start="translate-x-0"
        x-transition:leave-end="translate-x-full"
        style="transition-duration: var(--transition-duration, 300ms);"
      >
        <!-- Background Decor -->
        <div
          class="absolute inset-0 bg-professional-dots opacity-50 pointer-events-none"
        >
        </div>

        <!-- Scrollable Content -->
        <div
          class="relative flex-1 flex flex-col px-8 pt-24 pb-8 overflow-y-auto"
        >
          <nav class="flex flex-col gap-6" aria-label="Mobile navigation">
            {
              NAVIGATION_ITEMS.map((item, index) => {
                const isActive =
                  currentPath === item.href ||
                  (item.href !== "/" && currentPath.startsWith(item.href));
                return (
                  <a
                    href={item.href}
                    class:list={[
                      "nav-mobile-link",
                      isActive && "nav-mobile-link--active"
                    ]}
                    aria-current={isActive ? "page" : undefined}
                  >
                    <span class="nav-mobile-link__number">
                      0{index + 1}
                    </span>
                    {item.name}
                  </a>
                );
              })
            }
          </nav>

          <!-- Footer Info in Menu -->
          <div class="mt-auto pt-8 border-t border-[var(--border-secondary)]">
            <div class="flex flex-col gap-4 text-[var(--text-tertiary)]">
              <p class="text-sm font-medium">Volg ons</p>
              <div class="flex gap-4">
                <!-- Social placeholders -->
                <div
                  class="w-10 h-10 rounded-full bg-[var(--bg-elevated)] flex items-center justify-center shadow-sm text-[var(--text-primary)] border border-[var(--border-primary)]"
                >
                  <span class="sr-only">Facebook</span>
                  <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"
                    ><path
                      d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"
                    ></path></svg
                  >
                </div>
                <div
                  class="w-10 h-10 rounded-full bg-[var(--bg-elevated)] flex items-center justify-center shadow-sm text-[var(--text-primary)] border border-[var(--border-primary)]"
                >
                  <span class="sr-only">Instagram</span>
                  <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"
                    ><path
                      d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"
                    ></path></svg
                  >
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </template>
</div>

<style>
  /* === MOBILE NAVIGATION STYLES === */
  /* Custom mobile nav link styling (different from desktop Link component) */
  .nav-mobile-link {
    color: var(--text-secondary);
    text-decoration: none;
    font-size: 1.5rem;
    line-height: 2rem;
    font-weight: 700;
    letter-spacing: -0.025em;
    transition: all var(--transition-base);
    display: flex;
    align-items: center;
    gap: 1rem;
  }

  .nav-mobile-link:hover {
    color: var(--color-primary);
  }

  .nav-mobile-link--active {
    color: var(--color-primary);
    padding-left: 1rem;
    border-left: 4px solid var(--color-secondary);
  }

  .nav-mobile-link__number {
    font-size: 0.75rem;
    line-height: 1rem;
    font-weight: 700;
    color: rgb(243 146 0 / 0.6);
    opacity: 0;
    transform: translateY(0.25rem);
    transition: all var(--transition-base);
  }

  .nav-mobile-link:hover .nav-mobile-link__number {
    color: var(--color-secondary);
    opacity: 1;
  }

  /* === UTILITY CLASSES === */
  .bg-elevated {
    background-color: var(--bg-elevated);
  }
  .bg-text-primary {
    background-color: var(--text-primary);
  }

  /* Alpine.js cloak */
  [x-cloak] {
    display: none !important;
  }

  /* === REDUCED MOTION === */
  @media (prefers-reduced-motion: reduce) {
    .nav-mobile-link,
    .nav-mobile-link__number {
      transition: none !important;
    }
  }
</style>
